<div class="container">
  <h1>Booking Form</h1>

  <div class="form-box">
    <%= form_with url: check_availability_bookings_path, method: :get, local: true do |f| %>
      <%= f.hidden_field :hotel_id, value: @hotel.id %>
      <div class="form-group">
        <%= f.label :check_in_date, "Check-in Date:" %>
        <%= f.date_field :check_in_date, required: true %>
      </div>
      <div class="form-group">
        <%= f.label :check_out_date, "Check-out Date:" %>
        <%= f.date_field :check_out_date, required: true %>
      </div>
      <%= f.submit "Check Availability", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>