<div class="container">
  <h1>Booking Form</h1>

  <div class="form-box">
    <%= form_with model: @booking, url: availability_bookings_path , method: :post, local: true do |f| %> 
      <%= f.hidden_field :hotel_id, value: @hotel.id %> 
      <% byebug %>
      <div class="form-group">
        <%= f.label :check_in_date, "Check-in Date:" %>
        <%= f.date_field :check_in_date, required: true %>
      </div>
      <div class="form-group">
        <%= f.label :check_out_date, "Check-out Date:" %>
        <%= f.date_field :check_out_date, required: true %>
      </div>
      <%= f.submit "check availability" %>
    <% end %>
  </div>
</div>